{
    "mcpServers": {
        "statamic": {
            "command": "php",
            "args": [
                "artisan",
                "mcp:start",
                "statamic"
            ],
            "env": {
                "APP_ENV": "local"
            }
        },
        "laravel-boost": {
            "command": "php",
            "args": [
                "artisan",
                "boost:mcp"
            ]
        },
        "herd": {
            "command": "php",
            "args": [
                "/Applications/Herd.app/Contents/Resources/herd-mcp.phar"
            ],
            "env": {
                "SITE_PATH": "/Users/ppdx11649/PhpstormProjects/fairbanks2"
            }
        }
    }
}